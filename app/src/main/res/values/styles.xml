<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--去掉系统默认的标题栏-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">12dip</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progress_drawble</item>//自己定义的进度条
    </style>


    <style name="AlertDialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/white</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="imageDialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@color/color_light</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/color_light</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">#80000000</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--popuwindows中间弹出-->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popuwindows_show</item>
        <item name="android:windowExitAnimation">@anim/popuwindows_hide</item>
    </style>

    <!--popuwindows底部弹出-->
    <style name="popwin_anim_style_bottom">
        <item name="android:windowEnterAnimation">@anim/popuwindows_in</item>
        <item name="android:windowExitAnimation">@anim/popuwindows_out</item>
    </style>

    <!--popuwindows顶部弹出-->
    <style name="popwin_anim_style_top">
        <item name="android:windowEnterAnimation">@anim/popuwindows_out</item>
        <item name="android:windowExitAnimation">@anim/popuwindows_in</item>
    </style>

    <!-- 非首页（非第一级页面让Activity透明） -->

    <style name="textview_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSize">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
