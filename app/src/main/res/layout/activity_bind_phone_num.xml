<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.shuyun.qapp.ui.login.BindPhoneNumActivity">

    <include layout="@layout/common_left_title" />

    <include layout="@layout/phone_number" />

    <include layout="@layout/code" />

    <include layout="@layout/error_hint" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_40"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="67dp"
        android:background="@drawable/btn_selector"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />
</LinearLayout>
