<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_left_title" />

    <include layout="@layout/phone_number" />

    <include layout="@layout/code" />

    <include layout="@layout/error_hint" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_40"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="67dp"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/btn_selector"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />

    <LinearLayout
        android:id="@+id/ll_agree_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_25"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/bind_phone_tip"
            android:textColor="@color/login_text"
            android:textSize="@dimen/text_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/agree_text"
            android:textColor="@color/color_4"
            android:textSize="@dimen/text_12" />
    </LinearLayout>
</LinearLayout>
