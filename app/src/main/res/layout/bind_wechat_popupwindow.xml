<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="310dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="310dp"
        android:src="@mipmap/new_popupwindow_bg" />

    <ImageView
        android:id="@+id/iv_wechat_head"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_2"
        android:src="@mipmap/new_real_expression" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/text_25"
        android:layout_height="@dimen/text_25"
        android:layout_alignParentRight="true"
        android:layout_marginTop="88dp"
        android:layout_marginRight="@dimen/text_8"
        android:src="@mipmap/new_popupwindow_delete" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginTop="@dimen/text_125"
        android:layout_marginRight="@dimen/text_15"
        android:textColor="#000000"
        android:textSize="@dimen/text_17" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nick_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginTop="@dimen/text_58"
        android:layout_marginRight="@dimen/text_15"
        android:gravity="center_horizontal"
        android:text="您的账号已经绑定微信了"
        android:textColor="@color/color_4"
        android:textSize="@dimen/text_17" />

    <Button
        android:id="@+id/btn_change_bind_wechat"
        android:layout_width="@dimen/text_150"
        android:layout_height="@dimen/text_35"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_20"
        android:background="@drawable/blue_btn_bg"
        android:text="更换绑定微信号"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />
</RelativeLayout>
