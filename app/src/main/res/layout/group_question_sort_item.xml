<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sort"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    android:background="@drawable/selector_1"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_sort_item"
        android:layout_width="@dimen/text_17"
        android:layout_height="@dimen/text_17"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_12"
        android:layout_marginTop="@dimen/text_18" />

    <TextView
        android:id="@+id/tv_sort_name"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/text_12"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/text_16"
        android:layout_toRightOf="@+id/iv_sort_item"
        android:singleLine="true"
        android:text="@string/active"
        android:textColor="@color/color_7"
        android:textSize="@dimen/text_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/text_1"
        android:background="#eeeeee" />

</RelativeLayout>