<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="@dimen/text_10"
        android:layout_marginRight="@dimen/text_12"
        android:layout_marginTop="@dimen/text_10">

        <com.shuyun.qapp.view.RoundImageView
            android:id="@+id/iv_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:type="round" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_10"
        android:layout_marginRight="@dimen/text_12"
        android:layout_marginTop="@dimen/text_10"
        android:background="@drawable/classify_gray_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="@dimen/text_10"
        android:layout_marginRight="@dimen/text_12"
        android:layout_marginTop="@dimen/text_10">

        <TextView
            android:id="@+id/tv_consume_answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/common_group_text_bg"
            android:paddingBottom="@dimen/text_4"
            android:paddingLeft="@dimen/text_8"
            android:paddingRight="@dimen/text_3"
            android:paddingTop="@dimen/text_4"
            android:text="不消耗答题次数"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11" />

        <TextView
            android:id="@+id/tv_solving_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_consume_answer_num"
            android:layout_marginTop="@dimen/text_5"
            android:background="@drawable/common_group_text_bg"
            android:paddingBottom="@dimen/text_4"
            android:paddingLeft="@dimen/text_8"
            android:paddingRight="@dimen/text_3"
            android:paddingTop="@dimen/text_4"
            android:text="有答题攻略"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11" />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/create_city"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_give_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_8"
            android:layout_marginLeft="@dimen/text_8"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11" />
    </RelativeLayout>


</FrameLayout>