<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="@dimen/text_6"
    android:background="@mipmap/home_group_one">

    <com.shuyun.qapp.view.RoundImageView
        android:id="@+id/iv_group_bg"
        android:layout_width="120dp"
        android:layout_height="86dp"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginTop="@dimen/text_15"
        android:scaleType="centerCrop"
        android:src="@mipmap/zw01"
        app:radius="@dimen/text_5"
        app:type="round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/text_15"
        android:layout_toRightOf="@+id/iv_group_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_marginRight="@dimen/text_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_1"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_8"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_35"
                        android:textSize="@dimen/text_12"
                         />

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@+id/iv_group_bg"
                        android:textColor="@color/login_text"
                        android:textSize="@dimen/text_11" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/text_0.5"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_36"></View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_35"
                        android:textSize="@dimen/text_12"
                       />

                    <TextView
                        android:id="@+id/tv_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@+id/iv_group_bg"
                        android:textColor="@color/login_text"
                        android:textSize="@dimen/text_11" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/text_0.5"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_36"></View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_35"
                        android:textSize="@dimen/text_12"
                        />

                    <TextView
                        android:id="@+id/tv_right_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@+id/iv_group_bg"
                        android:textColor="@color/login_text"
                        android:textSize="@dimen/text_11" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_marginTop="@dimen/text_5"
            android:layout_marginRight="@dimen/text_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/login_text"
            android:textSize="@dimen/text_11" />

        <TextView
            android:id="@+id/tv_reduce_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_marginTop="@dimen/text_5"
            android:layout_marginRight="@dimen/text_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_4"
            android:textSize="@dimen/text_10" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_recommend"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/recommend"
        android:visibility="gone" />
</RelativeLayout>