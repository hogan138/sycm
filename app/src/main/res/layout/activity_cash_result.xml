<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.shuyun.qapp.ui.mine.AuthResultActivity">

    <include layout="@layout/common_left_title" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="124dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_item_height"
        android:src="@mipmap/hongbaojieguo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/text_20"
        android:text="提现申请已提交\n预计到账时间:1-3个工作日"
        android:textColor="@color/color_2"
        android:textSize="@dimen/text_15" />

    <Button
        android:id="@+id/btn_sure3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_40"
        android:layout_marginLeft="@dimen/text_12"
        android:layout_marginRight="@dimen/text_12"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_btn_bg_4"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />
</LinearLayout>
