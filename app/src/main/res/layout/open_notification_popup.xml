<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66333333">

    <RelativeLayout
        android:id="@+id/rl_open_notification"
        android:layout_width="@dimen/text_270"
        android:layout_height="@dimen/text_250"
        android:layout_centerInParent="true"
        android:background="@drawable/common_pop_bg">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="@dimen/text_119"
            android:layout_height="@dimen/text_75"
            android:layout_marginLeft="@dimen/text_68.5"
            android:layout_marginRight="@dimen/text_82.5"
            android:layout_marginTop="@dimen/text_48"
            android:src="@mipmap/xiaox" />

        <TextView
            android:id="@+id/tv_open_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_12"
            android:text="开启消息通知"
            android:textColor="@color/color_1"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_notification_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_open_notification_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_10"
            android:text="第一时间获取答题资讯,最高赢4999元!"
            android:textColor="@color/color_27"
            android:textSize="@dimen/text_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_0.5"
            android:layout_below="@+id/tv_notification_content"
            android:layout_marginTop="@dimen/text_20"
            android:background="@color/color_28" />

        <TextView
            android:id="@+id/tv_open_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/text_17"
            android:text="马上开启"
            android:textColor="@color/color_29"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_open_notification"
        android:layout_marginTop="@dimen/text_25"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_close_open_notification_popup"
            android:layout_width="@dimen/text_20"
            android:layout_height="@dimen/text_20"
            android:src="@mipmap/close_popup" />
    </RelativeLayout>
</RelativeLayout>