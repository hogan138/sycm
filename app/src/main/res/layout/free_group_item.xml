<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginTop="@dimen/text_15"
    android:background="@mipmap/home_group_two"
    android:orientation="vertical">


    <com.shuyun.qapp.view.OvalImageView
        android:id="@+id/iv_group_bg"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginLeft="@dimen/text_3"
        android:layout_marginRight="@dimen/text_3"
        android:scaleType="fitXY"
        android:src="@mipmap/zw01" />

    <TextView
        android:id="@+id/tv_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_10"
        android:layout_marginTop="@dimen/text_7"
        android:text="@string/create_city"
        android:textColor="#333333"
        android:textSize="@dimen/text_15" />

    <TextView
        android:id="@+id/tv_group_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="#666666"
        android:textSize="@dimen/text_12" />
</LinearLayout>