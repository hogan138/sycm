<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginTop="@dimen/text_15"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.shuyun.qapp.view.OvalImageView
                android:id="@+id/iv_group_bg"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zw01" />

            <TextView
                android:id="@+id/tv_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_10"
                android:layout_marginTop="@dimen/text_7"
                android:layout_marginRight="@dimen/text_10"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/create_city"
                android:textColor="#333333"
                android:textSize="@dimen/text_15" />

            <com.shuyun.qapp.view.PrinterTextView
                android:id="@+id/tv_group_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_10"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#666666"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>