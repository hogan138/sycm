<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_guide_and_answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_35"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_6"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_12"
            android:text="悄悄告诉你,答案我都准备好了哦~"
            android:textColor="@color/color_19"
            android:textSize="@dimen/text_13"/>
        <!---->
        <Button
            android:id="@+id/btn_look_answer_guide"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/text_5"
            android:layout_marginRight="@dimen/text_12"
            android:background="@drawable/common_btn_bg_6"
            android:text="@string/look_answer_guide"
            android:textColor="@color/color_4"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_immediately_answer"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_20"
        android:layout_marginLeft="@dimen/text_12"
        android:layout_marginRight="@dimen/text_12"
        android:layout_marginTop="@dimen/text_16"
        android:background="@drawable/common_btn_bg_4"
        android:text="@string/immediately_answer"
        android:textColor="@color/white"
        android:textSize="19dp" />
</LinearLayout>