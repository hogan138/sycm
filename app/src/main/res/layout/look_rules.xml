    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/text_10"
        android:layout_height="@dimen/text_10"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/text_12"
        android:src="@mipmap/tishi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/text_5"
        android:layout_marginRight="@dimen/text_12"
        android:paddingBottom="@dimen/text_4"
        android:paddingTop="@dimen/text_4"
        android:text="@string/look_rules"
        android:textColor="@color/white"
        android:textSize="@dimen/text_11" />

</LinearLayout>