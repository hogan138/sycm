<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.shuyun.qapp.ui.homepage.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_0"
            android:textSize="@dimen/text_16" />


        <ImageView
            android:id="@+id/iv_common_right_icon"
            android:layout_width="@dimen/text_20"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="分享"
            android:textColor="@color/color_1"
            android:textSize="@dimen/text_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_white" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--banner轮播图-->
            <include layout="@layout/layout_banner" />

            <!--推荐题组-->
            <include layout="@layout/recommend_group_question" />

            <include layout="@layout/recommend_group_item" />

            <!--活动布局-->
            <LinearLayout
                android:id="@+id/activityRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_15"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/text_14"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_often"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_5"
                        android:layout_height="@dimen/text_15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/text_15"
                        android:layout_marginRight="@dimen/text_5"
                        android:background="@color/color_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/home_always"
                        android:textColor="@color/color_0"
                        android:textSize="@dimen/text_15" />

                </LinearLayout>

                <cn.kevin.banner.BannerViewPager
                    android:id="@+id/always_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/B_viewPager_02"
                    android:layout_margin="@dimen/text_15"
                    app:around_visible="true"
                    app:item_margin="12dp"
                    app:marginLeft="36dp"
                    app:marginRight="36dp"
                    app:point_drawable="@drawable/banner_selector"
                    app:point_gravity="bottom_center" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f5"></View>
            <!--跑马灯效果-->
            <include layout="@layout/horse_race_lamp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f5"></View>
            <!--热门提组-->
            <include layout="@layout/hot_group_question_head" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_hot_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_12"
                    android:layout_marginTop="@dimen/text_4"
                    android:layout_marginRight="@dimen/text_5">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_group_sort_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_12"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="@dimen/text_5">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="客服热线：400-650-9258"
                    android:textColor="@color/color_35"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/tv_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/text_12"
                    android:text="招商热线：0571-86875104"
                    android:textColor="@color/color_35"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/text_12"
                    android:layout_marginBottom="@dimen/text_18"
                    android:text="@string/home_bottom_text"
                    android:textColor="@color/home_text_bottom"
                    android:textSize="@dimen/text_15" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_bx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/text_10"
        android:layout_marginBottom="@dimen/text_70"
        android:src="@mipmap/indexbx"
        android:visibility="gone" />
</RelativeLayout>
