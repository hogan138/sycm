<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/rl_title"
        layout="@layout/common_left_title" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_address_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:layout_marginBottom="@dimen/text_50" />

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/address_empty_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_27"
            android:text="@string/tv_empty_address"
            android:textColor="@color/login_text"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_4"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/tv_add_new_address"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />
</RelativeLayout>