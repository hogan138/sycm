<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/text_1"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="-2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.shuyun.qapp.view.OvalImageView
                android:id="@+id/iv_group_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/zw01"
                app:type="round" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_35">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_10"
                    android:layout_marginRight="75dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_15" />


                <TextView
                    android:id="@+id/tv_button_name"
                    android:layout_width="62dp"
                    android:layout_height="21dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_10"
                    android:background="@drawable/common_contact_our_bg"
                    android:gravity="center"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>