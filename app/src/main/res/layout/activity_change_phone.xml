<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.shuyun.qapp.ui.login.BindPhoneNumActivity">

    <include layout="@layout/common_left_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.5dp"
        android:layout_marginLeft="@dimen/text_12">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/text_13"
            android:layout_height="@dimen/text_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@mipmap/phone_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv"
            android:text="新手机号"
            android:textColor="@color/color_1"
            android:textSize="@dimen/text_16" />


        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_127"
            android:background="@null"

            android:hint="请输入您的手机号"
            android:textColor="@color/color_0"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <include layout="@layout/common_line_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:layout_marginLeft="@dimen/text_12">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/text_13"
            android:layout_height="@dimen/text_21"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@mipmap/code_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv1"
            android:text="验证码"
            android:textColor="@color/color_1"
            android:textSize="@dimen/text_16" />

        <EditText
            android:id="@+id/et_new_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_127"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:background="@null"
            android:hint="@string/input_code"
            android:textColor="@color/color_0"
            android:textSize="@dimen/text_16" />
        <!--获取验证码按钮,根据情况显示或者隐藏-->
        <Button
            android:id="@+id/btn_get_code2"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_13"
            android:background="@drawable/common_btn_bg_3"
            android:text="@string/get_code"
            android:textColor="@color/color_4"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <include layout="@layout/common_line_1" />

    <TextView
        android:id="@+id/tv_code_error2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_12"
        android:layout_marginTop="@dimen/text_12"
        android:text="@string/code_error"
        android:textColor="@color/color_21"
        android:textSize="@dimen/text_13"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_sure2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_40"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="38dp"
        android:background="@drawable/common_btn_bg_4"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />
</LinearLayout>
