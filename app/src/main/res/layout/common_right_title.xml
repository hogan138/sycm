<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/mine_top">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="@dimen/text_20"
            android:layout_height="@dimen/text_20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_15"
            android:src="@mipmap/mine_back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_common_right_icon"
        android:layout_width="@dimen/text_20"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/text_2"
        android:layout_marginRight="@dimen/text_18"
        android:src="@mipmap/messagew_n" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mine_top" />
</RelativeLayout>