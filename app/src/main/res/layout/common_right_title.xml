<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    android:background="#12B9BE">


    <TextView
        android:id="@+id/tv_common_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/color_0"
        android:textSize="@dimen/text_16" />


    <ImageView
        android:id="@+id/iv_common_right_icon"
        android:layout_width="@dimen/text_20"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/text_18"
        android:src="@mipmap/messagew_n" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#12B9BE" />
</RelativeLayout>