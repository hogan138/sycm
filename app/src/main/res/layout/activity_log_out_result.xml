<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--左侧标题-->
    <include layout="@layout/common_left_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shenhe_in" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo_in" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/text_50"
        android:layout_marginTop="@dimen/text_32"
        android:layout_marginRight="@dimen/text_50"
        android:text="您的账号注销申请我们已经收到,\n将会在2-10个工作日内完成审核。"
        android:textColor="@color/color_1"
        android:textSize="@dimen/text_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/text_50"
        android:layout_marginTop="@dimen/text_15"
        android:layout_marginRight="@dimen/text_50"
        android:text="在审核阶段,您仍可以正常使用全民共进,\n并且在此期间,您可以随时撤回注销申请。"
        android:textColor="@color/color_27"
        android:textSize="@dimen/text_12" />

    <Button
        android:id="@+id/btn_logout_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/text_30"
        android:layout_marginTop="@dimen/text_50"
        android:layout_marginRight="@dimen/text_30"
        android:background="@drawable/btn_blue_side_boundary_bg1"
        android:text="确定"
        android:textColor="@color/color_37"
        android:textSize="@dimen/text_15" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_45"
        android:layout_marginLeft="@dimen/text_30"
        android:layout_marginTop="@dimen/text_11"
        android:layout_marginRight="@dimen/text_30"
        android:background="@drawable/btn_bind_wechat_bg"
        android:text="撤回注销申请"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15" />
</LinearLayout>
