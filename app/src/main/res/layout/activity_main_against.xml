<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.shuyun.qapp.ui.homepage.MainAgainstActivity">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_marginRight="@dimen/text_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_25"
                android:text="我的积分："
                android:textColor="#0194EC"
                android:textSize="@dimen/text_18" />

            <RelativeLayout
                android:id="@+id/rl_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_24">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_90"
                    android:background="@mipmap/free_bg" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_23"
                    android:layout_marginTop="@dimen/text_16"
                    android:text="自由对战"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="21dp"
                    android:layout_below="@+id/tv1"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="@dimen/text_10"
                    android:background="@drawable/score_against_bg"
                    android:gravity="center"
                    android:text="不消耗积分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="68dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_47.5"
                    android:background="@mipmap/jiangbei" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_15">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_90"
                    android:background="@mipmap/new_bg" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_23"
                    android:layout_marginTop="@dimen/text_16"
                    android:text="新手场"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:id="@+id/tv_new_score"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_below="@+id/tv2"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="@dimen/text_10"
                    android:background="@drawable/score_against_bg_new"
                    android:gravity="center"
                    android:paddingLeft="@dimen/text_10"
                    android:paddingRight="@dimen/text_10"
                    android:text="消耗积分："
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10" />

                <ImageView
                    android:layout_width="67.5dp"
                    android:layout_height="67.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_47.5"
                    android:background="@mipmap/jinbi" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/text_15"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_common"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_90"
                        android:background="@mipmap/common_bg" />

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="83dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/jiangpai" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_23"
                        android:layout_marginTop="@dimen/text_16"
                        android:text="普通场"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/tv_common_score"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_below="@+id/tv3"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="@dimen/text_10"
                        android:background="@drawable/score_against_bg_common"
                        android:gravity="center"
                        android:paddingLeft="@dimen/text_10"
                        android:paddingRight="@dimen/text_10"
                        android:text="消耗积分："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_10" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_high"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/text_10"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_90"
                        android:background="@mipmap/heig_bg" />

                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="83dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:background="@mipmap/game_logo" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_23"
                        android:layout_marginTop="@dimen/text_16"
                        android:text="高级场"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/tv_high_score"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_below="@+id/tv4"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="@dimen/text_10"
                        android:background="@drawable/score_against_bg_high"
                        android:gravity="center"
                        android:paddingLeft="@dimen/text_10"
                        android:paddingRight="@dimen/text_10"
                        android:text="消耗积分："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_10" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_25"
                android:text="对战规则"
                android:textColor="#333333"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_8"
                android:lineSpacingExtra="@dimen/text_3"
                android:textColor="#999999"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
