<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_left_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_46"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_15"
                android:paddingRight="@dimen/text_15">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_add_name"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_15" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/tv_hint_name"
                    android:singleLine="true"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/text_15"
                android:layout_marginRight="@dimen/text_15"
                android:background="@color/color_32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_46"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_15"
                android:paddingRight="@dimen/text_15">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_add_number"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_15" />

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/tv_hint_number"
                    android:singleLine="true"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/text_15"
                android:layout_marginRight="@dimen/text_15"
                android:background="@color/color_32" />

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_46"
                android:paddingLeft="@dimen/text_15"
                android:paddingRight="@dimen/text_15">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_add_address"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="96dp"
                    android:text="@string/tv_hint_address"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="@dimen/text_14"
                    android:layout_height="@dimen/text_14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gomore" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/text_15"
                android:layout_marginRight="@dimen/text_15"
                android:background="@color/color_32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_15"
                android:paddingTop="@dimen/text_10"
                android:paddingRight="@dimen/text_15">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_add_address_detail"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_15" />

                <EditText
                    android:id="@+id/et_address_deatail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:background="@null"
                    android:hint="@string/tv_hint_address_detail"
                    android:maxLines="2"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_15"
            android:layout_marginTop="@dimen/text_25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_default"
                android:layout_width="@dimen/text_20"
                android:layout_height="@dimen/text_20"
                android:src="@mipmap/default_no_checked_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_15"
                android:text="@string/tv_default_address"
                android:textColor="@color/color_1"
                android:textSize="@dimen/text_15" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_50"
        android:background="@color/color_4"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/tv_enter"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />
</LinearLayout>