<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.shuyun.qapp.ui.mine.AuthResultActivity">

    <include layout="@layout/common_left_title" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="88.5dp"
        android:src="@mipmap/withdraw_success_logo" />

    <TextView
        android:id="@+id/tv_rsult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/text_23"
        android:gravity="center_horizontal"
        android:textColor="@color/color_2"
        android:textSize="@dimen/text_15"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_40"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/text_15"
        android:background="@drawable/common_btn_bg_4"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15" />
</LinearLayout>
