<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_change_head_icon"
    android:layout_width="match_parent"
    android:layout_height="63.5dp"
    android:layout_gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_12"
        android:layout_marginTop="@dimen/text_24"
        android:text="@string/change_icon"
        android:textColor="@color/color_1"
        android:textSize="@dimen/text_15" />

    <com.shuyun.qapp.view.RoundImageView
        android:id="@+id/iv_header_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/iv_change_icon"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/text_8"/>

    <ImageView
        android:id="@+id/iv_change_icon"
        android:layout_width="@dimen/text_7"
        android:layout_height="@dimen/text_12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/text_12"
        android:src="@mipmap/gomore" />
</RelativeLayout>