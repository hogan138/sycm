<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_main"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_white" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/pager"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home"
            android:drawablePadding="@dimen/text_4"
            android:enabled="false"
            android:gravity="center"
            android:paddingTop="@dimen/text_5"
            android:text="首页"
            android:textColor="@color/home_bottom_tv_color"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_classify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/classify"
            android:drawablePadding="@dimen/text_4"
            android:gravity="center"
            android:paddingTop="@dimen/text_5"
            android:text="分类"
            android:textColor="@color/home_bottom_tv_color"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/radio_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/activity_n"
            android:drawablePadding="@dimen/text_4"
            android:gravity="center"
            android:paddingTop="@dimen/text_5"
            android:text="活动"
            android:textColor="@color/home_bottom_tv_color"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/me"
            android:drawablePadding="@dimen/text_4"
            android:gravity="center"
            android:paddingTop="@dimen/text_5"
            android:text="我的"
            android:textColor="@color/home_bottom_tv_color"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />
    </RadioGroup>
</LinearLayout>