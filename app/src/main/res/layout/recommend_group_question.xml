<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_13">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_13"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/text_5"
            android:layout_height="@dimen/text_14"
            android:layout_marginLeft="@dimen/text_12"
            android:layout_marginRight="@dimen/text_5"
            android:background="@color/color_4"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_group"
            android:textColor="@color/color_0"
            android:textSize="@dimen/text_14"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/text_14"
        android:id="@+id/ll_change_group"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/text_10"
            android:layout_height="@dimen/text_10"
            android:layout_marginRight="@dimen/text_4"
            android:src="@mipmap/change_x"
            android:layout_gravity="center_vertical"/>
        <!--android:background="@drawabtn_bg_4rmal"-->

        <TextView
            android:id="@+id/tv_change_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_12"
            android:text="@string/change_batch"
            android:textColor="@color/color_2"
            android:textSize="@dimen/text_11"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</RelativeLayout>

