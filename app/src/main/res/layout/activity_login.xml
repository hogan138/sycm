<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.shuyun.qapp.ui.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--登录头布局-->
        <include layout="@layout/common_left_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_12"
            android:layout_marginTop="@dimen/text_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pwd_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/pwd_login"
                android:textColor="@color/color_0"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/tv_code_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/code_login"
                android:textColor="@color/color_0"
                android:textSize="@dimen/text_16" />
            <!--android:layout_marginLeft="33dp"-->

        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:layout_marginLeft="@dimen/common_margin"-->
        <!--android:layout_marginRight="@dimen/common_margin"-->
        <!--android:layout_marginTop="@dimen/medium_margin"-->
        <!--android:background="@color/light_white" />-->
        <include layout="@layout/common_line_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <View
                android:id="@+id/indicator_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_weight="1"
                android:background="#227fc5"
                android:visibility="visible" />

            <View
                android:id="@+id/indicator_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_weight="1"
                android:background="#227fc5"
                android:visibility="invisible" />

        </LinearLayout>
        <!--输入手机号-->
        <include layout="@layout/phone_number" />

        <include layout="@layout/common_line_5" />
        <!--输入验证码 根据情况显示或者隐藏-->
        <include layout="@layout/code" />
        <!--输入密码 根据情况显示或者隐藏-->
        <include layout="@layout/password" />

        <include layout="@layout/common_line_5" />
        <!--错误信息提示,根据情况显示或者隐藏-->
        <include layout="@layout/error_hint" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:layout_marginBottom="@dimen/text_1"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="67dp"
            android:background="@drawable/selector_3"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--android:layout_marginBottom="116.5dp"-->
        <!--其他登录方式-->
        <LinearLayout
            android:id="@+id/ll_other_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/text_7"
                android:layout_weight="1"
                android:background="@color/light_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_7"
                android:text="@string/other_login"
                android:textColor="@color/color_2"
                android:textSize="@dimen/text_11" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/text_12"
                android:layout_weight="1"
                android:background="@color/light_white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_wechat_login"
            android:layout_width="47.5dp"
            android:layout_height="47.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_15"
            android:src="@mipmap/wx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_is_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/agree"
                android:textColor="@color/color_2"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agreement"
                android:textColor="@color/color_2"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
